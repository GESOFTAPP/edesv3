function uTablas(){
if( eSqlType('informix') ){
qSelect( 'systables', 'tabname,tabtype', 'tabid>100' );
}else if( eSqlType('oracle') ){
global $_SqlUsuario; $SqlUsuario = mb_strtoupper($_SqlUsuario);
$sql = "SELECT TABLE_NAME FROM all_tables where OWNER='{$SqlUsuario}'";
qQuery( $sql );
}else if( eSqlType('mysql,mysqli') ){
qQuery('show tables');
}
$Dim = array();
$Dim[] = "";
while( $row = qRow() ){
if( eSqlType('informix') ){
if( $row[1]=='S' ){
$Dim[] = trim($row[0]);
}else{
$Dim[] = trim($row[0]);
}
}else if( eSqlType('oracle') ){
$Dim[] = mb_strtolower(trim($row[0]));
}else if( eSqlType('mysql,mysqli') ){
$Dim[] = trim($row[0]);
}
}
sort($Dim);
$DimTablas = array();
for($n=0; $n<count($Dim); $n++) $DimTablas[] = array($Dim[$n], mb_strtolower($Dim[$n]));
return $DimTablas;
}
