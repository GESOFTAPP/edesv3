[PHPForm]cR,mR
global $_Fila;
$indent = $_Fila['indent'];
$seq = $_Fila['seq'];
$n = 0;
while( $indent>0 ){
qQuery("select * from {$_ENV['eDesDictionary']}gs_op where seq<{$seq} and indent=".($indent-1).' order by seq desc' );
$row = qArray();
$_Fila['_padre_'.$n] = str_repeat("&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;", $n++).trim($row["caption"]);
$indent = $row['indent'];
$seq = $row['seq'];
}
[JSEnd]cR,mR
for(let n=0; n<8; n++){
if( S(":_padre_"+n).val()=="" ){
eHide("_padre_"+n, "tr");
}
}
[JSIni]cR
function ExeOp(){
var txt = S(":script_url").val(),
SeekPadre = (txt.substr(txt.length-1,1)==':');
if( SeekPadre ){
top.S.eventFire(S("tr[op='"+txt+"']",top).obj, "onclick");
}else{
var tr = S("tr[op='"+txt+"']",top).obj,
trs = S.toTag(tr,"table").rows;
top.S.eventFire(trs[tr.rowIndex+1], "click");
}
}